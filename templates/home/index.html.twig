{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div style="margin-bottom: 2.5rem">
        <form action="{{ path('home') }}" method="post">
            <label for="postal">Code postal :</label><br>
            <input type="text" id="postal" name="postal" required><br>
            <label for="commune">Nom de la commune :</label><br>
            <input type="text" id="commune" name="commune" required><br>
            <input type="submit" value="Rechercher">
        </form>
    </div>
    {% for etab in etablissement %}
        <div style="margin-bottom: 1.5rem; background: #eaeaea; width: 25rem; display: flex; flex-direction: column;
justify-content: center; align-items: center; text-align: center">
            {% if etab.properties.nom %}<p>Nom : {{ etab.properties.nom }}</p>{% endif %}
            {% if etab.properties.codeInsee %}<p>Code INSEE : {{ etab.properties.codeInsee }}</p>{% endif %}
            {% if etab.properties.email %}<p>Email : {{ etab.properties.email }}</p>{% endif %}
            {% if etab.properties.telephone %}<p>Téléphone : {{ etab.properties.telephone }}</p>{% endif %}
        </div>
    {% endfor %}
    <div>
    </div>
{% endblock %}
